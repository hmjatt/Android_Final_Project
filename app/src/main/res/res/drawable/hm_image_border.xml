    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CFCFCF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
